{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build IOT_Gateway",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true // Đảm bảo đây là task Build Mặc Định
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Runs 'make' to build the entire IOT Gateway project."
        },
        {
            "label": "Clean IOT_Gateway",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}